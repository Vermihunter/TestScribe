{
  "name": "testscribe",
  "displayName": "TestScribe",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "testscribe.forCurrFile",
        "title": "Generate tests for the current file"
      },
      {
        "command": "testscribe.forSelectedDir",
        "title": "Generate tests for the selected directory"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "My Extension Settings",
      "properties": {
        "testScribe.testPath": {
          "type": "string",
          "default": "tests",
          "description": "Specify the test path relative to the root folder."
        },
        "testScribe.generateForClassPrivateMethods": {
          "type": "boolean",
          "default": "false",
          "description": "Specify whether tests should be generated for private member methods of a class."
        },
        "testScribe.generateForClassProtectedMethods": {
          "type": "boolean",
          "default": "false",
          "description": "Specify whether tests should be generated for protected member methods of a class."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.9",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/vscode": "^1.95.0",
    "handlebars": "^4.7.8",
    "jest": "^29.7.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-cli": "^0.24.4",
    "tree-sitter-cpp": "^0.23.4",
    "vscode-languageserver": "^9.0.1",
    "vscode-test": "^1.6.1"
  }
}
